<Window x:Class="infograf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:infograf"
        mc:Ignorable="d"
        Title="Державні видатки у розрізі економічних категорій" Height="450" Width="800">
    <Grid>
        <Canvas x:Name="MyCanvas" Grid.Row="1">

        </Canvas>

        <TextBlock Name="InfoTextBlock" HorizontalAlignment="Left" VerticalAlignment="Top"
           Foreground="Black" FontSize="12"
           Margin="500,70,0,0" TextWrapping="Wrap">
            <InlineUIContainer Name="HyperlinkContainer"/>
        </TextBlock>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10">
            <Button x:Name="BackButton" Content="Назад" Width="100" Height="30" Opacity="0" Click="BackButton_Click"/>
            <Button x:Name="ForwardButton" Content="Вперед" Width="100" Height="30" Opacity="0" Click="ForwardButton_Click"/>
        </StackPanel>
    </Grid>

</Window>
